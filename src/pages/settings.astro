---
// src/pages/settings.astro
import Layout from '../layouts/Layout.astro';
import AdminLayout from '../components/AdminLayout.tsx';
---

<Layout>
	<AdminLayout client:load title="设置">
		<div class="space-y-4">
			<h1 class="text-2xl font-semibold">系统设置</h1>
			<form class="max-w-xl space-y-4">
				<div>
					<label class="block text-sm text-gray-600 mb-1">站点名称</label>
					<input class="w-full px-3 py-2 border rounded-md focus:outline-none focus:ring" placeholder="输入名称" />
				</div>
				<button class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">保存</button>
			</form>
		</div>
	</AdminLayout>
</Layout>